          {
              "name": "shadowsocks",
              "url": "http://download.opensuse.org/repositories/home:/gmg137/{FULL_SUSE_VERSION}/"
          },
          {
              "name": "repo-non-oss",
              "url": "https://{MIRROR_NAME}/opensuse/distribution/leap/{SUSE_VERSION}/repo/non-oss/"
          },
          {
              "name": "repo-oss",
              "url": "https://{MIRROR_NAME}/opensuse/distribution/leap/{SUSE_VERSION}/repo/oss/"
