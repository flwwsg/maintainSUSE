          "grep": "grep -E --color=auto ",
          "sudo": "sudo ",
          "pipinstall": "pip install -i {PIP_INDEX} ",
          "gobuild":"go build ",
          "gorun": "go run "
      },
      "cmd": [
        "export PATH=~/.local/bin:$PATH",
        "export GOPATH=~/dev",
        "export PATH=$GOPATH/bin:$PATH",
        "export VIRTUALENVWRAPPER_PYTHON=/usr/bin/python3",
        "source virtualenvwrapper.sh"
      ]
